<!DOCTYPE html>
<html lang="en">

<head>
    <title>Bootstrap 5 Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <%- include('../layout/header'); %>
        <div class="container mt-5">
            <div class="row">
                <div class="col-sm-8">
                    <h3>List Employee</h3>
                    <% if(message){%>
                        <div class="alert alert-success">
                            <strong>
                                Success!
                            </strong>
                            <%=message.message%>
                        </div>
                        <%}%>
                            <% if(listEmployee !="" ){%>
                                <div class="d-flex gap-2">
                                    <a href="/employee/sortDESC" class="btn btn-info">Sort DESC</a>
                                    <a href="/employee/sortASC" class="btn btn-primary">Sort ASC</a>
                                </div>

                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Employee Name</th>
                                            <th>Age</th>
                                            <th>Address</th>
                                            <th>Join Date</th>
                                            <th>DepartId</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% listEmployee.forEach((item,index)=>{%>
                                            <tr>
                                                <td>
                                                    <%=item.fullName%>
                                                </td>
                                                <td>
                                                    <%=item.age%>
                                                </td>
                                                <td>
                                                    <%=item.address%>
                                                </td>
                                                <td>
                                                    <%=item.joinDate.toLocaleDateString()%>
                                                </td>
                                                <td>
                                                    <%=item.departId%>
                                                </td>
                                                <td>
                                                    <a class="btn btn-primary"
                                                        href="./employee/update/<%=item.id%>">Update</a>
                                                    <a class="btn btn-primary"
                                                        href="./employee/detail/<%=item.id%>">Detail</a>

                                                </td>
                                            </tr>
                                            <%})%>

                                    </tbody>
                                </table>
                                <% }%>

                </div>
            </div>
        </div>
        <%- include('../layout/footer'); %>
</body>

</html>